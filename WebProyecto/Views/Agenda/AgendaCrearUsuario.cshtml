@model IEnumerable<Persona>
@{
    ViewData["Title"] = "Agenda Gestion Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión Servicio</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <style>
        .scrollable-table {
            overflow-y: auto;
            max-height: 200px; /* Puedes ajustar esto según lo necesites */
        }
        /* Custom styles */
        .navbar-custom {
            background-color: white;
            border-bottom: 2px solid black;
        }

            .navbar-custom .navbar-nav .nav-link {
                color: black; /* Black text color */
            }

                .navbar-custom .navbar-nav .nav-link.active,
                .navbar-custom .navbar-nav .nav-link:hover {
                    background-color: #f8bbd0; /* Pale rose background */
                    color: black; /* Keep text color black */
                }

        .header-area {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 20px;
        }

            .header-area .title {
                font-size: 24px; /* Adjust the size as needed */
            }

        .buttons-group {
            text-align: right;
        }

            .buttons-group .btn {
                margin-left: 10px; /* Space between buttons */
            }

        .form-container, .table-container {
            background-color: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); /* Shadow effect */
            border-radius: 15px; /* Rounded corners */
            padding: 20px;
            margin-top: 20px;
        }

        .form-container {
            background-color: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
            border-radius: 15px;
            padding: 20px;
            margin-top: 20px;
            margin-left: auto; /* Centrar horizontalmente */
            margin-right: auto; /* Centrar horizontalmente */
            max-width: 900px; /* Ancho máximo */
        }

        .btn-crear {
            background-color: green;
            color: white;
        }

        .btn-guardar {
            background-color: green; /* Same background color as the 'Crear' button */
            color: white;
            float: right; /* Align the button to the right */
            position: relative;
            top: -30px;
        }

        .btn-actualizar {
            background-color: #f8bbd0; /* Pale rose background */
            color: black; /* Black text color */
        }

        .hidden {
            display: none;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="#">Inicio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" asp-controller="Agenda" asp-action="AgendaLugar">Gestionar Lugar</a>
                <a class="nav-link " asp-controller="Agenda" asp-action="AgendaServicio">Gestionar Servicio</a>
                <a class="nav-link " asp-controller="Agenda" asp-action="Agenda">Gestionar Agenda</a>
                <a class="nav-link active" asp-controller="Agenda" asp-action="AgendaCrearUsuario">Crear Usuarios</a>
                <a class="nav-link" asp-controller="Agenda" asp-action="AgendaHistorial">Historial</a>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Mi Cuenta
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="nav-link" asp-controller="Usuario" asp-action="Cerrar"> Cerrar Sesión</a>

                    </div>
                </li>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="header-area">
            <div class="title">Gestionar Usuario</div>
            <div class="buttons-group">

                <a class="btn btn-actualizar" asp-controller="PDF" asp-action="GenerarPdfUusuarios">Exportar PDF</a>
                <a class="btn btn-actualizar" asp-controller="PDF" asp-action="GenerarExcelUsuarios">Exportar Excel</a>
                <button class="btn btn-crear" onclick="toggleForm('dataEntryForm')">CREAR</button>
            </div>
           
        </div>
        <div class="form-container hidden" id="dataEntryForm">
            <!-- Formulario de Registro -->
            <form class="container form-datos-mascota" method="post" asp-action="AgendaCrearUsuario" asp-controller="Agenda">
                <div class="container mt-5">
                    <h2 style="text-align: center;">Formulario de Registro</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="nombres">Nombres</label>
                                <input type="text" class="form-control" name="Persona.nombre" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="apellido">Apellidos</label>
                                <input type="text" class="form-control" id="apellido" name="Persona.apellido" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="tipoDocumento">Tipo de Documento</label>
                                @Html.DropDownList("selectTipoDocumento", (SelectList)ViewBag.DatosTipoDocumento, "Seleccione Documento", new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="numeroDocumento">Número de Documento</label>
                                <input type="text" class="form-control" id="numeroDocumento" name="Persona.idPersona" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" name="Persona.usuario.correo" required>
                    </div>
                    <div class="form-group">
                        <label for="telefono">Número de Teléfono</label>
                        <input type="tel" class="form-control" id="telefono" name="Persona.telefono" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="Persona.usuario.contrasena" required>
                    </div>
                    <div style="text-align: center; margin-top: 20px;">
                        <button type="submit" class="btn" style="background-color: #e75480; color: #fff;">Registrar</button>
                    </div>
                </div>
            </form>
        </div>


    </div>

    <div class="table-container scrollable-table">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Usuario</th>
                    <th scope="col">Contraseña</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Telefono</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Persona agendaservicio in Model)
                {
                    <tr>
                        <td>@agendaservicio.usu</td>
                        <td>@agendaservicio.contra</td>
                        <td>@agendaservicio.nombre</td>
                        <td>@agendaservicio.apellido</td>
                        <td>@agendaservicio.telefono</td>
                        <td>Activo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleForm() {
            var formContainer = document.getElementById('dataEntryForm');
            formContainer.classList.toggle('hidden');

        }
    </script>

</body>
</html>


